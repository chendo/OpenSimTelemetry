{
  "permissions": {
    "allow": [
      "Bash(just:*)",
      "Bash(cargo check:*)",
      "Bash(cargo build:*)",
      "Bash(cargo test:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git tag:*)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Bash(diff:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(gh:*)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ]
  },
  "hooks": {
    "WorktreeCreate": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'INPUT=$(cat); NAME=$(echo \"$INPUT\" | jq -r .name); CWD=$(echo \"$INPUT\" | jq -r .cwd); DIR=\"$CWD/.claude/worktrees/$NAME\"; git worktree add -b \"worktree-$NAME\" \"$DIR\" HEAD >&2 && echo \"$DIR\"'"
          }
        ]
      }
    ]
  }
}
